{
  "name": "edubridge",
  "private": true,
  "version": "0.1.0",
  "description": "EduBridge monorepo (MERN + Tailwind + Expo)",
  "workspaces": [
    "server",
    "apps/web",
    "apps/mobile"
  ],
  "scripts": {
    "start:server": "npm --workspace server run dev",
    "start:web": "npm --workspace apps/web run dev",
    "start:mobile": "npm --workspace apps/mobile run start",
    "start": "concurrently \"npm run start:server\" \"npm run start:web\"",
    "build": "cd apps/web && npm install && npm install vite@latest && npm run build",
    "build:server": "npm --workspace server install",
    "start:prod": "node server/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}

